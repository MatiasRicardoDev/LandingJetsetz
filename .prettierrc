{
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "endOfLine": "lf",

    "importOrder": [
        "^react$", 
        "^@core/(.*)$", 
        "<THIRD_PARTY_MODULES>",
        "^@server/(.*)$", 
        "^@/(.*)$", 
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
  
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
  }
  